{
  "name": "mini-golf-break",
  "version": "0.1.0",
  "description": "A casual mini-golf game built with Three.js and Cannon-es",
  "main": "src/main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/highlyprofitable108/mini-golf-break.git"
  },
  "bugs": {
    "url": "https://github.com/highlyprofitable108/mini-golf-break/issues"
  },
  "homepage": "https://github.com/highlyprofitable108/mini-golf-break#readme",
  "author": "",
  "license": "ISC",
  "sideEffects": false,
  "scripts": {
    "start": "webpack serve --mode development",
    "build": "webpack --mode production",
    "build:analyze": "webpack --mode production --analyze",
    "build:stats": "webpack --mode production --json > webpack-stats.json",
    "test": "jest",
    "test:unit": "jest --selectProjects=unit",
    "test:integration": "jest --selectProjects=integration",
    "test:coverage": "jest --coverage",
    "test:coverage:unit": "jest --selectProjects=unit --coverage",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:uat",
    "test:uat": "playwright test --config=tests/uat/playwright.config.js",
    "test:uat:headed": "playwright test --config=tests/uat/playwright.config.js --headed",
    "test:uat:debug": "playwright test --config=tests/uat/playwright.config.js --debug",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    "security": "npm audit && npm run security:check",
    "security:check": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "quality": "npm run lint && npm run format:check && npm run test",
    "quality:full": "npm run lint && npm run format:check && npm run test:coverage && npm run build",
    "quality:security": "npm run quality && npm run security",
    "pre-commit": "lint-staged",
    "prepare": "husky"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/plugin-transform-modules-commonjs": "^7.26.3",
    "@babel/preset-env": "^7.26.9",
    "@capacitor/cli": "^7.2.0",
    "@playwright/test": "^1.54.1",
    "@testing-library/jest-dom": "^6.6.3",
    "babel-loader": "^9.1.3",
    "cannon-es": "^0.20.0",
    "cannon-es-debugger": "^1.0.0",
    "copy-webpack-plugin": "^13.0.0",
    "css-loader": "^6.10.0",
    "css-minimizer-webpack-plugin": "^7.0.2",
    "eslint": "^8.57.0",
    "glob": "^10.3.10",
    "html-webpack-plugin": "^5.6.0",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.1.2",
    "playwright": "^1.54.1",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "style-loader": "^3.3.4",
    "terser-webpack-plugin": "^5.3.14",
    "three": "^0.174.0",
    "webpack": "^5.90.3",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.2"
  },
  "dependencies": {
    "@capacitor/core": "^7.2.0",
    "@capacitor/ios": "^7.2.0",
    "@capacitor/splash-screen": "^7.0.1",
    "three-csg-ts": "^3.2.0"
  },
  "directories": {
    "doc": "docs"
  },
  "keywords": []
}
