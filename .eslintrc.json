{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    // Code Quality - Temporarily relaxed for CI unblocking
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-undef": "error",
    "no-redeclare": "error",
    "no-unreachable": "error",
    "no-duplicate-case": "error",
    
    // Game Development Specific - Temporarily relaxed
    "no-console": "off",
    "no-debugger": "warn",
    "no-alert": "warn",
    "no-prototype-builtins": "warn",
    
    // Performance & Memory
    "no-loop-func": "error",
    "no-new-wrappers": "error",
    "no-implied-eval": "error",
    
    // Code Style - Relaxed for development
    "indent": ["warn", 2, { "SwitchCase": 1 }],
    "quotes": ["warn", "single", { "avoidEscape": true }],
    "semi": ["warn", "always"],
    "comma-dangle": ["warn", "never"],
    "eol-last": ["warn", "always"],
    "no-trailing-spaces": "warn",
    
    // Best Practices
    "curly": ["error", "all"],
    "eqeqeq": ["error", "always"],
    "no-eval": "error",
    "no-new-func": "error",
    "no-with": "error",
    "radix": "warn",
    
    // ES6+
    "prefer-const": "warn",
    "no-var": "error",
    "arrow-spacing": "warn",
    "object-shorthand": "warn",
    
    // Function Complexity - Temporarily increased limits
    "complexity": ["warn", 25],
    "max-depth": ["warn", 6],
    "max-params": ["warn", 8],
    "max-statements": ["warn", 50]
  },
  "globals": {
    "THREE": "readonly",
    "CANNON": "readonly"
  },
  "overrides": [
    {
      "files": ["src/tests/**/*.js", "**/*.test.js", "**/*.spec.js"],
      "env": {
        "jest": true
      },
      "rules": {
        "no-console": "off",
        "max-statements": "off"
      }
    },
    {
      "files": ["webpack.config.js", "jest.config.js"],
      "env": {
        "node": true
      },
      "rules": {
        "no-console": "off"
      }
    }
  ]
}